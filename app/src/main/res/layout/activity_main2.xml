<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.activity.Main2Activity">
   <android.support.v4.view.ViewPager
       android:id="@+id/buttom_pager"
       android:layout_weight="9"
       android:layout_width="match_parent"
       android:layout_height="0dp"/>

    <RadioGroup
        android:background="@mipmap/the_bottom_bar"
        android:id="@+id/buttom_group"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/buttom_img_01"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/common_button_tab_01"
            android:button="@null"
            android:checked="true" />

        <RadioButton
            android:layout_marginLeft="71dp"
            android:id="@+id/buttom_img_02"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/common_button_tab_02"
            android:button="@null" />


        <RadioButton
            android:layout_marginLeft="70dp"
            android:id="@+id/buttom_img_03"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/common_button_tab_03"
            android:button="@null" />
    </RadioGroup>
</LinearLayout>